{
  "name": "Our Best Seller",
  "settings": [
    {
      "type": "header",
      "content": "🎨 Diseño General"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Color de fondo sección",
      "default": "#f8f6f0"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "label": "Padding vertical (px)",
      "min": 40,
      "max": 120,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "label": "Padding horizontal (px)",
      "min": 20,
      "max": 80,
      "step": 10,
      "default": 40
    },
    {
      "type": "range",
      "id": "container_max_width",
      "label": "Ancho máximo contenedor (px)",
      "min": 1200,
      "max": 1600,
      "step": 50,
      "default": 1400
    },
    {
      "type": "header",
      "content": "📝 Contenido Sección"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "PRODUCTOS ESTRELLA"
