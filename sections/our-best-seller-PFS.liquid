    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Tamaño subtítulo (px)",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 14
    },
    {
      "type": "select",
      "id": "subtitle_weight",
      "label": "Peso subtítulo",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" }
