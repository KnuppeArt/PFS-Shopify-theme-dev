        { "value": "uppercase", "label": "Mayúsculas" },
        { "value": "lowercase", "label": "Minúsculas" },
        { "value": "capitalize", "label": "Primera Mayúscula" }
      ],
      "default": "uppercase"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Nuestros Productos Más Vendidos"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Tamaño título (px)",
      "min": 24,
      "max": 48,
      "step": 2,
      "default": 36
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Peso título",
      "options": [
