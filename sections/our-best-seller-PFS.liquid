    {
      "type": "range",
      "id": "description_size",
      "label": "Tamaño descripción (px)",
      "min": 14,
      "max": 22,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "description_line_height",
      "label": "Altura línea descripción",
